#!/usr/bin/env node

var deploy = require('../lib/deploy')
var dist = require('../lib/dist')

var commander = require('commander');
commander
  .version('0.0.1')
  .option('-C, --chdir <path>', 'change the working directory')
  .option('-c, --config <path>', 'set config path. defaults to ./deploy.conf')
  .option('-T, --no-tests', 'ignore test hook')

commander
  .command('deploy [env]')
  .description('run deploy commands for all envs')
  .option("-s, --deploy_mode [mode]", "Which deploy mode to use")
  .action(function(env, options){
    // console.log(env)
    var mode = options.deploy_mode || "normal";
    env = env || 'all';
    console.log(deploy)
    deploy.upload(env)


    // console.log('deploy for %s env(s) with %s mode', env, mode);
  });

commander
  .command('dist')
  .description('run dist commands')
  .action(function(options){
    // console.log(env)
    var mode = options.deploy_mode || "normal";

    dist([
      'templates/base2.html',
      // 'static/page/*.js'
    ])

  });

commander.parse(process.argv);

if (!commander.args[0]) {
  commander.help();
}